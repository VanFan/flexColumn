<mvc:View
	controllerName="zychcn.zbundle01.controller.Master"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:SemanticPage id="dynamicPageId" toggleHeaderOnTitleClick="true" showFooter="true">
		<!-- DynamicPage Title -->
		<semantic:titleHeading>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>masterHeader}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</semantic:titleHeading>
		<semantic:headerContent>
			<m:HBox justifyContent="SpaceBetween">
				<m:VBox width="20%">
					<m:Label text="Bundle ID"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:VBox width="20%">
					<m:Label text="Bundle Type"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:VBox width="20%">
					<m:Label text="Promotion Type"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:ToolbarSpacer/>
				<m:VBox width="20%">
					<m:Label text="Valid From"/>
					<m:DatePicker value="{
							path: 'new>ValidFrom',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium',
								pattern: 'yyyy-MM-dd'
							}
						}" valueFormat="yyyy-MM-dd" minDate="{setting>/minDate}"/>
				</m:VBox>
				<m:VBox>
					<m:Button width="5%" icon="sap-icon://search" type="Transparent" press=".onSearch"/>
				</m:VBox>
			</m:HBox>
		</semantic:headerContent>
		<!-- DynamicPage Content -->
		<semantic:content>
			<VBox fitContainer="true">
				<Table
					id="productsTable"
					inset="false"
					items="{
						path: 'invoice>/BundleListSet'
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
						<Column width="12em">
							<!-- <Text text="{i18n>masterListHeader}"/> -->
						</Column>
						<Column	hAlign="End">
							<!-- <Text text="Price"/> -->
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<VBox>
									<Label text="{invoice>BdHeadNumber}"/>
									<HBox>
										<core:Icon
											src="sap-icon://sap-box"
											size="3rem"
											color="#1C4C98">
											<core:layoutData>
												<FlexItemData growFactor="1" />
											</core:layoutData>
										</core:Icon>
										<Text text="{invoice>SortCode} {invoice>BdDesc}"/>
									</HBox>
									<Text text="{i18n>masterListItemValidFrom} : {
										path: 'invoice>ValidFrom',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'medium'
										}
									}" />
									<Text text="{i18n>masterListItemValidTo} : {
										path: 'invoice>ValidTo',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'medium'
										}
									}" />
								</VBox>
								<VBox>
									<!-- <Text text="{i18n>BUID} : {
										path: 'invoice>BuId',
										formatOptions: {
											style: 'medium'
										}
									}" /> -->
									<Label text="{invoice>BuDesc}"/>
									<Label text="{invoice>BdPromType} {invoice>BdPromTypeDesc}"/>
								</VBox>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</semantic:content>

		<!-- DynamicPage Footer -->
		<semantic:footerCustomActions>
			<Button text="{i18n>footerCreate}" type="Emphasized" icon="sap-icon://add" press=".onCreateButtonPress"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>