<mvc:View
	controllerName="zychcn.zbundle01.controller.Master"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:SemanticPage id="dynamicPageId" toggleHeaderOnTitleClick="true" showFooter="true">
		<!-- DynamicPage Title -->
		<semantic:titleHeading>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>masterHeader}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</semantic:titleHeading>
		<semantic:headerContent>
			<m:HBox justifyContent="SpaceBetween">
				<m:VBox width="20%">
					<m:Label text="Bundle ID"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:VBox width="20%">
					<m:Label text="Bundle Type"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:VBox width="20%">
					<m:Label text="Promotion Type"/>
					<m:Input value="{tableData>boundno}"/>
				</m:VBox>
				<m:ToolbarSpacer/>
				<m:VBox width="20%">
					<m:Label text="Valid From"/>
					<m:DatePicker value="{
							path: 'new>ValidFrom',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium',
								pattern: 'yyyy-MM-dd'
							}
						}" valueFormat="yyyy-MM-dd" minDate="{setting>/minDate}"/>
				</m:VBox>
				<m:VBox>
					<m:Button width="5%" icon="sap-icon://search" type="Transparent" press=".onSearch"/>
				</m:VBox>
			</m:HBox>
		</semantic:headerContent>
		<!-- DynamicPage Content -->
		<semantic:content>
			<VBox fitContainer="true">
				<Table
					id="productsTable"
					inset="false"
					items="{
						path: 'invoice>/BundleListSet'
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
						<Column>
							<Text text="{i18n>BdHeadNumber}"/>
						</Column>
						<Column>
							<Text text="{i18n>BdPromType}"/>
						</Column>
						<Column>
							<Text text="{i18n>BdPromTypeDesc}"/>
						</Column>
						<Column>
							<Text text="{i18n>SortCode}"/>
						</Column>
						<Column>
							<Text text="{i18n>BdDesc}"/>
						</Column>
						<Column>
							<Text text="{i18n>BuDesc}"/>
						</Column>
						<Column>
							<Text text="{i18n>ValidFrom}"/>
						</Column>
						<Column>
							<Text text="{i18n>ValidTo}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<Label text="{invoice>BdHeadNumber}"/>
								<Label text="{invoice>BdPromType}"/>
								<Label text="{invoice>BdPromTypeDesc}"/>
								<Label text="{invoice>SortCode}"/>
								<Label text="{invoice>BdDesc}"/>
								<Label text="{invoice>BuDesc}"/>
								<Text text="{i18n>masterListItemValidFrom} : {
									path: 'invoice>ValidFrom',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'medium'
									}
								}" />
								<Text text="{i18n>masterListItemValidTo} : {
									path: 'invoice>ValidTo',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'medium'
									}
								}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</semantic:content>

		<!-- DynamicPage Footer -->
		<semantic:footerCustomActions>
			<Button text="{i18n>footerCreate}" type="Emphasized" icon="sap-icon://add" press=".onCreateButtonPress"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>