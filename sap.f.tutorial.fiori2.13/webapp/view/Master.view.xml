<mvc:View
	controllerName="zychcn.zbundle01.controller.Master"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:SemanticPage id="dynamicPageId" toggleHeaderOnTitleClick="true" showFooter="true" preserveHeaderStateOnScroll="true">
		<!-- DynamicPage Title -->
		<semantic:titleHeading>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>masterHeader}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</semantic:titleHeading>
		<semantic:headerContent>
			<fb:FilterBar filterBarExpanded="true" showClearOnFB="true" search=".onSearch" clear=".onClear">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdHeadNumber"
						label="{i18n>BdHeadNumber}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="BdHeadNumber" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="SortCode"
						label="{i18n>SortCode}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="SortCode" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdDesc"
						label="{i18n>BdDesc}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="BdDesc" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdPromType"
						label="{i18n>promotionType}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Select 
								name="BdPromType" 
								items="{
									path: 'PROM_TYPE>/'
								}"
								forceSelection="false"
							>
								<core:Item key="{PROM_TYPE>Numb}" text="{PROM_TYPE>Numb} {PROM_TYPE>High}" />
							</m:Select>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="ValidTo"
						label="{i18n>ValidTo}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:DatePicker 
								name="ValidTo"
								minDate="{setting>/minDate}"/>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</semantic:headerContent>
		<!-- DynamicPage Content -->
		<semantic:content>
			<VBox fitContainer="true">
				<Table
					id="productsTable"
					inset="false"
					autoPopinMode="true"
					items="{
						path: 'invoice>/BundleListSet'
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<!-- stickyColumnHeader="true"
					fixedRowCount="10"
					height="50%"> -->
					<columns>
						<Column>
							<Text text="{i18n>BdHeadNumber}"/>
						</Column>
						<Column>
							<Text text="{i18n>promotionType}"/>
						</Column>
						<Column>
							<Text text="{i18n>promotionTypeDesc}"/>
						</Column>
						<Column>
							<Text text="{i18n>SortCode}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>BdDesc}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>BuDesc}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>ValidFrom}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>ValidTo}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>Expired}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<Label text="{invoice>BdHeadNumber}"/>
								<Label text="{invoice>BdPromType}"/>
								<Label text="{invoice>BdPromTypeDesc}"/>
								<Label text="{invoice>SortCode}"/>
								<Label text="{invoice>BdDesc}"/>
								<Label text="{invoice>BuDesc}"/>
								<Text text="{
									path: 'invoice>ValidFrom',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'medium',
										pattern: 'yyyy-MM-dd'
									}
								}" />
								<Text text="{
									path: 'invoice>ValidTo',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'medium',
										pattern: 'yyyy-MM-dd'
									}
								}" />
								<!-- <Label text="{invoice>Expiredflag}"/> -->
								<CheckBox selected="{(invoice>Expiredflag === '')}"/> 
								<!-- <Label text="{(invoice>Expiredflag != '') ? 1 : 2}"/>  -->
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<PagingButton/>
			</VBox>
		</semantic:content>

		<!-- DynamicPage Footer -->
		<semantic:footerCustomActions>
			<Button text="{i18n>footerCreate}" type="Emphasized" icon="sap-icon://add" press=".onCreateButtonPress"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>