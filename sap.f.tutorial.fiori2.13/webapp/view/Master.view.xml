<mvc:View
	controllerName="zychcn.zbundle01.controller.Master"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:SemanticPage id="dynamicPageId" toggleHeaderOnTitleClick="true" showFooter="true">
		<!-- DynamicPage Title -->
		<semantic:titleHeading>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>masterHeader}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</semantic:titleHeading>
		<semantic:headerContent>
			<fb:FilterBar filterBarExpanded="false" search=".onSearch">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdHeadNumber"
						label="{i18n>BdHeadNumber}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="BdHeadNumber" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="SortCode"
						label="{i18n>SortCode}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="SortCode" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdDesc"
						label="{i18n>BdDesc}"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="BdDesc" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="BdPromType"
						label="Promotion Type"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Select 
								name="BdPromType" 
								items="{
									path: 'PROM_TYPE>/'
								}"
								forceSelection="false"
							>
								<core:Item key="{PROM_TYPE>Numb}" text="{PROM_TYPE>Numb} {PROM_TYPE>High}" />
							</m:Select>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
						groupName="__$MASTER$"
						name="ValidFrom"
						label="Valid From"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:DatePicker 
								name="ValidFrom"
								minDate="{setting>/minDate}"/>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
