<mvc:View
	controllerName="zychcn.zbundle01.controller.Create"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>CreateHeader}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<m:Title text="{invoice>HeadId}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</navigationActions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:HBox>
				<core:Icon
					src="sap-icon://sap-box"
					size="3rem"
					color="#1C4C98">
					<core:layoutData>
						<m:FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
			</m:HBox>
			<m:HBox justifyContent="SpaceBetween">
				<m:VBox>
					<m:HBox alignItems="Center">
						<m:Label text="BU ID : " design="Bold"/>
						<m:Input value="{invoice>BuId}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="BU {i18n>HeaderDesc} : " design="Bold"/>
						<m:Input value="{invoice>BuDesc}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>salesOrg} : " design="Bold"/>
						<m:Input value=" {invoice>SalesOrg}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>SalesChannels} : " design="Bold"/>
						<m:Input value=" {invoice>DistrChan}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:HBox alignItems="Center">
						<m:Label text="Sort Code : " design="Bold"/>
						<m:Input value="{invoice>SortCode}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>Supplier} : " design="Bold"/>
						<m:Input value="{invoice>BdDesc}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>promotionType} : " design="Bold"/>
						<m:Input value="{invoice>BdPromType}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>promotionTypeDesc} :" design="Bold"/>
						<m:Input value="{invoice>BdPromTypeDesc}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>masterListItemValidFrom} :" design="Bold"/>
						<m:DatePicker value="{invoice>ValidFrom}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>masterListItemValidTo} :" design="Bold"/>
						<m:DatePicker value="{invoice>ValidTo}"/>
					</m:HBox>
					<m:HBox alignItems="Center">
						<m:Label text="{i18n>SalesVolume} : " design="Bold"/>
						<m:Input value="{invoice>Qty}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">
						<m:CheckBox text="{i18n>UnifiedDelivery}" selected="{invoice>Delivery}"/>
						<m:CheckBox text="{i18n>MechanicalEquipment}" selected="{invoice>Eqip}"/>
						<m:HBox alignItems="Center">
							<m:Label text="{i18n>Status} : " design="Bold"/>
							<m:Input value="{invoice>Status}"/>
						</m:HBox>
					</m:VBox>
				</m:VBox>
			</m:HBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="{i18n>ComponentDefinition}">
				<subSections>
					<ObjectPageSubSection>
                        <actions>
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://add"
                                press="handleAddPress" />
							<m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://edit"
                                press="handleAddPress" />
							<m:OverflowToolbarButton
								id="editButton"
                                type="Transparent"
                                icon="sap-icon://paste"
                                press="firePaste" />
                        </actions>
						<blocks>
							<m:Table
								id="table"
								items="{path : 'new>/'}"
								paste=".onPaste">
								<m:columns>
									<m:Column>
										<m:Text text="{i18n>groupID}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>salesNo}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ProductType}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>FreeItem}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>shipmentGroup}"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onGroupPress">
										<m:cells>
											<m:Input value="{new>col0}"/>
										</m:cells>
										<m:cells>
											<m:Input value="{new>col1}"/>
										</m:cells>
										<m:cells>
											<m:Input value="{new>col2}"/>
										</m:cells>
										<m:cells>
											<m:CheckBox selected="{!!new>col3}"/>
										</m:cells>
										<m:cells>
											<m:Input value="{new>col4}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="{i18n>HeaderPrice}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								items="{path : 'invoice>ToPrice'}">
								<m:columns>
									<m:Column>
										<m:Text text="{i18n>ProductLineNo}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>Price}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>Limit}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>Dealer}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>CustomerNo}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>Province}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>code}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ValidFrom}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ValidTo}"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>PrcGuid}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpQty}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Rate}{invoice>RateUnit}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>CreatedBy}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>AgreeId}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Province}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>PriceType}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{
												path: 'invoice>ValidFrom',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text=" {
												path: 'invoice>ValidTo',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Save" press=".onSave"/>
				<m:Button text="Cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>