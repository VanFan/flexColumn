<mvc:View
	controllerName="zychcn.zbundle01.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>创建套包}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<m:Title text="{invoice>HeadId}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</navigationActions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:HBox>
				<core:Icon
					src="sap-icon://sap-box"
					size="3rem"
					color="#1C4C98">
					<core:layoutData>
						<m:FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
			</m:HBox>
			<m:HBox>
				<m:HBox>
					<m:Label text="{i18n>组织架构}"/>
					<m:Input/>
				</m:HBox>
				<m:HBox>
					<m:Label text="促销类型"/>
					<m:Select/>
				</m:HBox>
			</m:HBox>
			<m:HBox>
				<m:HBox>
					<m:Label text="有效期从"/>
					<m:DatePicker/>
				</m:HBox>
				<m:HBox>
					<m:Label text="有效期至"/>
					<m:DatePicker/>
				</m:HBox>
			</m:HBox>
			<m:HBox>
				<m:CheckBox text="统一发货"/>
				<m:CheckBox text="机器设备"/>
			</m:HBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="组件定义">
				<subSections>
					<ObjectPageSubSection>
                        <actions>
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://add"
                                press="handleButtonPress" />
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://edit"
                                press="handleButtonPress" />
                        </actions>
						<blocks>
							<m:Table
								items="{path : 'invoice>ToGroup'}">
								<m:columns>
									<m:Column>
										<m:Text text="组编号"/>
									</m:Column>
									<m:Column>
										<m:Text text="销售数量"/>
									</m:Column>
									<m:Column>
										<m:Text text="产品类型"/>
									</m:Column>
									<m:Column>
										<m:Text text="免费项"/>
									</m:Column>
									<m:Column>
										<m:Text text="发货组"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onSupplierPress">
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpId}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpQty}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpScope}"/>
										</m:cells>
										<m:cells>
											<m:CheckBox selected="{!!invoice>GrpFree}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>CreatedBy}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="套包定价">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								items="{path : 'invoice>ToPrice'}">
								<m:columns>
									<m:Column>
										<m:Text text="产品行号"/>
									</m:Column>
									<m:Column>
										<m:Text text="单价"/>
									</m:Column>
									<m:Column>
										<m:Text text="限额"/>
									</m:Column>
									<m:Column>
										<m:Text text="经销商"/>
									</m:Column>
									<m:Column>
										<m:Text text="客户号"/>
									</m:Column>
									<m:Column>
										<m:Text text="省份"/>
									</m:Column>
									<m:Column>
										<m:Text text="编码"/>
									</m:Column>
									<m:Column>
										<m:Text text="有效期从"/>
									</m:Column>
									<m:Column>
										<m:Text text="有效期至"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>PrcGuid}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpQty}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Rate}{invoice>RateUnit}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>CreatedBy}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>AgreeId}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Province}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>PriceType}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{
												path: 'invoice>ValidFrom',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text=" {
												path: 'invoice>ValidTo',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Save"/>
				<m:Button text="Cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>