<core:FragmentDefinition
   xmlns:m="sap.m"
   xmlns:core="sap.ui.core" >
   <m:Dialog
      id="checkDialog"
      title="{i18n>BatchCreation}">
      <m:subHeader>
        <m:OverflowToolbar>
            <m:Button text="{i18n>simulate}" press=".check"/>
            <m:Button text="{i18n>paste}" press=".firePaste"/>
            <m:Button text="{i18n>clear}" press=".clearPaste"/>
            <m:Button text="{i18n>export}" press=".onCalExport"/>
            <m:Button text="{i18n>addNewLine}" press=".onAddPrice"/>
			<!-- <m:OverflowToolbarButton
                type="Transparent"
                icon="sap-icon://simulate"
                text="试算"
                tooltip="{i18n>simulatePrice}"
                press=".check" /> -->
            <!-- <m:OverflowToolbarButton
                type="Transparent"
                icon="sap-icon://paste"
                tooltip="{i18n>pastePrice}"
                press=".firePaste" /> -->
		</m:OverflowToolbar>
      </m:subHeader>
        <m:content>
            <m:Table
                id="checkTable"
                paste=".onPaste"
                items="{path : 'check>/'}">

                <m:columns>
                    <m:Column>
                        <m:Text text="{i18n>ProvinceID}"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="{i18n>ProvinceDesc}"/>
                    </m:Column>
                    <m:Column width = "5%">
                        <m:Text text="{i18n>ProtocolID}"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="{i18n>CustomerID}"/>
                    </m:Column>
                    <!-- <m:Column>
                        <m:Text text="{i18n>CustomerDesc}"/>
                    </m:Column> -->
                    <m:Column>
                        <m:Text text="{i18n>Rate}"/>
                    </m:Column>
                    <m:Column width = "5%">
                        <m:Text text="{i18n>RateUnit}"/>
                    </m:Column>
                    <m:Column width = "5%">
                        <m:Text text="{i18n>CAP}"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="{i18n>ValidFrom}"/>
                    </m:Column>
                    <m:Column>
                        <m:Text text="{i18n>ValidTo}"/>
                    </m:Column>
                    <m:Column width = "5%">
                    </m:Column>
                    <m:Column width = "5%">
                    </m:Column>
                    <m:Column width = "5%">
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem>
                        <m:cells>
                            <m:Input value="{check>Province}"/>
                        </m:cells>
                        <m:cells>
                            <m:Input value="{check>RegionDesc}"/>
                            <!-- <m:Input value="{new>RateUnit}"/> -->
                        </m:cells>
                        <m:cells>
                            <m:Input value="{check>AgreeId}"/>
                        </m:cells>
                        <m:cells>
                            <m:Input value="{check>BpCodeInAgree}"/>
                        </m:cells>

                        <m:cells>
                            <m:Input value="{check>Rate}"/>
                        </m:cells>
                        <m:cells>
                            <m:Input value="{check>RateUnit}"/>
                        </m:cells>
                        <m:cells>
                            <m:Input value="{check>Cap}"/>
                        </m:cells>
                        <m:cells>
                            <m:DatePicker value="{
								path: 'check>ValidFrom',
                                type: 'sap.ui.model.type.Date',
								formatOptions: {
									style: 'medium',
									pattern: 'yyyy-MM-dd'
								}
							}" valueFormat="yyyy-MM-dd"/>
                        </m:cells>
                        <m:cells>
                            <m:DatePicker value="{
								path: 'check>ValidTo',
                                type: 'sap.ui.model.type.Date',
								formatOptions: {
									style: 'medium',
									pattern: 'yyyy-MM-dd'
								}
							}" valueFormat="yyyy-MM-dd"/>
                        </m:cells>
                        <m:cells>
                            <m:HBox>
                                <core:Icon
                                    src="sap-icon://status-error"
                                    class="size1"
                                    visible="{= ${check>MessageType} === 'E' }"
                                    color="#ff0000" >
                                    <core:layoutData>
                                        <m:FlexItemData growFactor="1" />
                                    </core:layoutData>
                                </core:Icon>
                                <core:Icon
                                    src="sap-icon://accept"
                                    class="size1"
                                    visible="{= ${check>MessageType} === '' }"
                                    color="#031E48" >
                                    <core:layoutData>
                                        <m:FlexItemData growFactor="1" />
                                    </core:layoutData>
                                </core:Icon>
                                <core:Icon
                                    src="sap-icon://warning2"
                                    class="size1"
                                    visible="{= ${check>MessageType} === 'W' }"
                                    color="#ffde24" >
                                    <core:layoutData>
                                        <m:FlexItemData growFactor="1" />
                                    </core:layoutData>
                                </core:Icon>
                            </m:HBox>
                        </m:cells>
                        <m:cells>
                            <m:Text text="{check>MessageText}"/>
                        </m:cells>
                        <m:cells>
                            <m:Button icon="sap-icon://delete" type="Transparent" press="onDeletePrice" ariaLabelledBy="editButtonLabel"/>
                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
         </m:content>
        <m:beginButton>
            <m:Button
                enabled="{save>/enabled}"
                text="{i18n>Save}"
                press=".onConfirmDialog"/>
        </m:beginButton>
        <m:endButton>
            <m:Button
                text="{i18n>Cancel}"
                press=".onCloseDialog"/>
        </m:endButton>
   </m:Dialog>
</core:FragmentDefinition>