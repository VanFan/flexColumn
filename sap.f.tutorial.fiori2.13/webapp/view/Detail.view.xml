<mvc:View
	controllerName="zychcn.zbundle01.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>detailHeader}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<!-- <f:Avatar
								src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"
								displaySize="S"
								displayShape="Square"
								class="sapUiTinyMarginEnd"/> -->
							<m:Title text="{invoice>HeadId}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</navigationActions>

				<!-- <actions>
					<m:ToggleButton
						text="Edit"
						type="Emphasized"
						press=".onEditToggleButtonPress"/>
					<m:Button
						text="Delete"
						type="Transparent"/>
					<m:Button
						text="Copy"
						type="Transparent"/>
					<m:Button
						icon="sap-icon://action"
						type="Transparent"/>
				</actions> -->
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<!-- <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"
					displaySize="L"
					displayShape="Square"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Main Category"/>
					<m:Text text="{products>MainCategory}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Subcategory"/>
					<m:Text text="{products>Category}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Price"/>
					<m:ObjectNumber number="{products>CurrencyCode} {products>Price}" emphasized="false"/>
				</m:VBox>
			</m:FlexBox> -->
			<m:HBox>
				<core:Icon
					src="sap-icon://sap-box"
					size="3rem"
					color="#1C4C98">
					<core:layoutData>
						<m:FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
				<m:Text text="{invoice>BdHeadNumber}"/>
			</m:HBox>
			<m:HBox justifyContent="SpaceBetween">
				<m:VBox>
					<m:HBox>
						<m:Label text="{i18n>salesOrg}: "/>
						<m:Text text="{invoice>SalesOrg}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>SalesChannels}: "/>
						<m:Text text="{invoice>DistrChan}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>Supplier}ID: "/>
						<m:Text text="{invoice>BuId}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>HeaderDesc}: "/>
						<m:Text text="{invoice>BuDesc}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:HBox>
						<m:Label text="Sort Code "/>
						<m:Text text="{invoice>SortCode}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>Supplier}: "/>
						<m:Text text="{invoice>BdDesc}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>promotionType}: "/>
						<m:Text text="{invoice>BdPromType}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>promotionTypeDesc}:"/>
						<m:Text text="{invoice>BdPromTypeDesc}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">
						<m:Text text="{i18n>masterListItemValidFrom} : {
							path: 'invoice>ValidFrom',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium'
							}
						}" />
						<m:Text text="{i18n>masterListItemValidTo} : {
							path: 'invoice>ValidTo',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium'
							}
						}" />
						<m:HBox justifyContent="Start">
							<m:Label text="{i18n>SalesVolume}: "/>
							<m:Text text="{invoice>Qty}"/>
						</m:HBox>
					</m:VBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">
						<m:CheckBox text="{i18n>UnifiedDelivery}" selected="{invoice>Delivery}" editable="false"/>
						<m:CheckBox text="{i18n>MechanicalEquipment}" selected="{invoice>Eqip}" editable="false"/>
						<m:HBox>
							<m:Label text="{i18n>Status}: "/>
							<m:Text text="{invoice>Status}"/>
						</m:HBox>
					</m:VBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">


					</m:VBox>
				</m:VBox>
			</m:HBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="{i18n>Status}组件定义">
				<subSections>
					<ObjectPageSubSection>
						<actions>
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://add"
                                press="handleButtonPress" />
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://edit"
                                press="handleButtonPress" />
                        </actions>
						<blocks>
							<!-- <form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Product ID"/>
									<m:Text text="{products>ProductId}"/>
									<m:Label text="Description"/>
									<m:Text text="{products>Description}"/>
									<m:Label text="Supplier"/>
									<m:Text text="{products>SupplierName}"/>
								</form:content>
							</form:SimpleForm> -->
							<m:Table
								items="{path : 'invoice>ToGroup'}">
								<m:columns>
									<m:Column>
										<m:Text text="组编号"/>
									</m:Column>
									<m:Column>
										<m:Text text="组范围"/>
									</m:Column>
									<m:Column>
										<m:Text text="组范围描述"/>
									</m:Column>									
									<m:Column>
										<m:Text text="数量系数"/>
									</m:Column>
									<m:Column>
										<m:Text text="免费项"/>
									</m:Column>
									<m:Column>
										<m:Text text="发货组"/>
									</m:Column>
									<m:Column>
										<m:Text text="数量检查"/>
									</m:Column>	
									<!-- <m:Column>
										<m:Text text="组描述"/>
									</m:Column>									 -->
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onSupplierPress">
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpCode}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpScope}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpScopeDesc}"/>
										</m:cells>										
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpQty}"/>
										</m:cells>
										<m:cells>
											<m:CheckBox selected="{!!invoice>GrpFree}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>GrpDelvery}"/>
										</m:cells>
										<m:cells>
											<m:CheckBox selected="true"/>
										</m:cells>
										<!-- <m:cells>
											<m:ObjectIdentifier text="描述"/>
										</m:cells>								 -->
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="套包定价">
				<subSections>
					<ObjectPageSubSection>
						<actions>
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://upload"
                                press="handleButtonPress" />
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://add-activity-2"
                                press="handleButtonPress" />
                        </actions>
						<blocks>
							<m:Table
								items="{path : 'invoice>ToPrice'}">
								<m:columns>
									<m:Column>
										<m:Text text="省份编号"/>
									</m:Column>
									<m:Column>
										<m:Text text="省份描述"/>
									</m:Column>
									<m:Column>
										<m:Text text="协议号"/>
									</m:Column>
									<m:Column>
										<m:Text text="客户号"/>
									</m:Column>
									<m:Column>
										<m:Text text="客户描述"/>
									</m:Column>
									<m:Column>
										<m:Text text="有效期从"/>
									</m:Column>
									<m:Column>
										<m:Text text="有效期至"/>
									</m:Column>
									<m:Column>
										<m:Text text="Rate"/>
									</m:Column>
									<m:Column>
										<m:Text text="CAP"/>
									</m:Column>

								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Province}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>RegionDesc}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>AgreeId}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>BpCodeInAgree}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="客户描述"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{
												path: 'invoice>ValidFrom',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text=" {
												path: 'invoice>ValidTo',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium'
												}
											}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Rate} {invoice>RateUnit}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{invoice>Cap}"/>
										</m:cells>

									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<!-- 当前容器不支持IconTabBar-->
			<!-- <m:IconTabBar>
				<m:items>
					<m:IconTabFilter 
						key="info" 
						icon="sap-icon://hint"
						text="组件定义">
						<m:Text text="Info content goes here ..." />
					</m:IconTabFilter>
					<m:IconTabFilter
						key="attachments"
						text="套包定价"
						icon="sap-icon://attachment">
						<m:Text text="Attachments go here ..." />
					</m:IconTabFilter>
				</m:items>
			</m:IconTabBar> -->
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Save"/>
				<m:Button text="Cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>