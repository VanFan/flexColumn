<mvc:View
	controllerName="zychcn.zbundle01.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>detailHeader}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<m:Title text="{detail>/HeadId}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://full-screen"
						press=".handleFullScreen"
						tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://exit-full-screen"
						press=".handleExitFullScreen"
						tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://decline"
						press=".handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
				</navigationActions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:HBox>
				<core:Icon
					src="sap-icon://sap-box"
					size="3rem"
					color="#1C4C98">
					<core:layoutData>
						<m:FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
				<m:Text text="{detail>/BdHeadNumber}"/>
			</m:HBox>
			<m:HBox justifyContent="SpaceBetween">
				<m:VBox>
					<m:HBox>
						<m:Label text="BU ID : " design="Bold"/>
						<m:Text text=" {detail>/BuId}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="BU {i18n>HeaderDesc} : " design="Bold"/>
						<m:Text text=" {detail>/BuDesc}" editable="{= !!${/bEdit}}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>salesOrg} : " design="Bold"/>
						<m:Text text=" {detail>/SalesOrg}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>SalesChannels} : " design="Bold"/>
						<m:Text text=" {detail>/DistrChan}"/>
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:HBox>
						<m:Label text="{i18n>SortCode} : " design="Bold"/>
						<m:Text text="{detail>/SortCode}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>Supplier} : " design="Bold"/>
						<m:Text text="{detail>/BdDesc}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>promotionTypeDesc} : " design="Bold"/>
						<m:Text text="{detail>/BdPromType} {detail>/BdPromTypeDesc}"/>
					</m:HBox>
					<!-- <m:HBox>
						<m:Label text="{i18n>promotionTypeDesc} :" design="Bold"/>
						<m:Text text="{detail>/BdPromTypeDesc}"/>
					</m:HBox> -->
				</m:VBox>
				<m:VBox>
					<m:HBox>
						<m:Label text="{i18n>masterListItemValidFrom} :" design="Bold"/>
						<m:Text text=" {
							path: 'detail>/ValidFrom',
							design: 'bold',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium',
								pattern: 'yyyy-MM-dd'
							}
						}"/>
						<!-- <m:DatePicker value="{detail>/ValidFrom}" editable="false"/> -->
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>masterListItemValidTo} :" design="Bold"/>
						<!-- <m:Text text="{
							path: 'detail>ValidTo',
							design: 'bold',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium'
							}
						}" editable="{= !!${/bEdit}}"/> -->
						<m:DatePicker value="{
							path: 'detail>/ValidTo',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium',
								pattern: 'yyyy-MM-dd'
							}
						}" editable="{= !!${/bEdit}}" valueFormat="yyyy-MM-dd" minDate="{setting>/minDate}"/>
					</m:HBox>
					<m:HBox>
						<m:Label text="{i18n>SalesVolume} : " design="Bold"/>
						<m:HBox>
							<m:ObjectIdentifier text="{detail>/Qty}" visible="{= !${/bEdit}}"/>
							<m:Input value="{detail>/Qty}" visible="{= !!${/bEdit}}"/>
						</m:HBox>
						<!-- <m:Text text="{detail>Qty}" editable="{= !!${/bEdit}}"/> -->
					</m:HBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">
						<m:CheckBox text="{i18n>UnifiedDelivery}" selected="{!!detail>/Delivery}" editable="{= !!${/bEdit}}"/>
						<m:CheckBox text="{i18n>MechanicalEquipment}" selected="{!!detail>/Eqip}" editable="{= !!${/bEdit}}"/>
						<m:HBox>
							<m:Label text="{i18n>Status} : " design="Bold"/>
							<m:Text text="{detail>/Status}"/>
						</m:HBox>
					</m:VBox>
				</m:VBox>
				<m:VBox>
					<m:VBox justifyContent="Start">


					</m:VBox>
				</m:VBox>
			</m:HBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="{i18n>ComponentDefinition}">
				<subSections>
					<ObjectPageSubSection>
						<actions>
                            <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://add"
                                press=".editAddGroup" 
								visible="{= !!${/bEdit}}" />
                            <!-- <m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://edit"
                                press="handleButtonPress" /> -->
                        </actions>
						<blocks>
							<m:Table
								items="{path : 'detail>/ToGroup/results'}">
								<m:columns>
									<m:Column>
										<m:Text text="{i18n>groupID}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>GroupDesc}"/>
									</m:Column>	
									<m:Column>
										<m:Text text="{i18n>GruopScope}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>QuantityCoefficient}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>FreeItem}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ShipmentGroup}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>QuantityCheck}"/>
									</m:Column>	
								
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onSupplierPress">
										<m:cells>
											<m:ObjectIdentifier text="{detail>GrpCode}"/>
										</m:cells>
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>GrpText}" visible="{= !${/bEdit}}"/>
												<m:Input value="{detail>GrpText}" visible="{= !!${/bEdit}}"/>
											</m:HBox>
											<!-- <m:ObjectIdentifier text="{detail>GrpText}"/> -->
											<!-- <m:Input value="{detail>GrpText}" visible="{= !!${/bEdit}}"/> -->
										</m:cells>		
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>GrpScope}" visible="{= !${/bEdit}}"/>
												<m:Select
													selectedKey="{detail>GrpScope}"
													items="{
														path: 'PROD_SCOPE>/'
													}"
													visible="{= !!${/bEdit}}"
												>
													<core:Item key="{PROD_SCOPE>Numb} {PROD_SCOPE>High}" text="{PROD_SCOPE>Numb} {PROD_SCOPE>High}"/>
												</m:Select>
											</m:HBox>
										</m:cells>
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>GrpQty}" visible="{= !${/bEdit}}"/>
												<m:Input value="{detail>GrpQty}" visible="{= !!${/bEdit}}"/>
											</m:HBox>
										</m:cells>
										<m:cells>
											<m:CheckBox selected="{= !!${detail>GrpFree}}" enabled="{= !!${/bEdit}}"/>
										</m:cells>
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>GrpDelivery}" visible="{= !${/bEdit}}"/>
												<m:Input value="{detail>GrpDelivery}" visible="{= !!${/bEdit}}"/>
											</m:HBox>
											<!-- <m:ObjectIdentifier text="{detail>GrpDelivery}" enabled="{= !!${/bEdit}}"/> -->
										</m:cells>
										<m:cells>
											<m:CheckBox selected="{= !!${detail>GrpQtycheck}}" enabled="{= !!${/bEdit}}"/>
										</m:cells>						
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="{i18n>HeaderPrice}">
				<subSections>
					<ObjectPageSubSection>
						<actions>
							<m:OverflowToolbarButton
                                type="Transparent"
                                icon="sap-icon://check-availability"
                                press=".openDialog" />
                        </actions>
						<blocks>
							<m:Table
								items="{path : 'detail>/ToPrice/results'}">
								<m:columns>
									<m:Column>
										<m:Text text="{i18n>ProvinceID}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ProvinceDesc}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ProtocolID}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>CustomerID}"/>
									</m:Column>
									<!-- <m:Column>
										<m:Text text="{i18n>CustomerDesc}"/>
									</m:Column> -->

									<m:Column>
										<m:Text text="{i18n>Rate}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>RateUnit}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>CAP}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ValidFrom}"/>
									</m:Column>
									<m:Column>
										<m:Text text="{i18n>ValidTo}"/>
									</m:Column>

								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{detail>Province}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{detail>RegionDesc}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{detail>AgreeId}"/>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{detail>BpCodeInAgree}"/>
										</m:cells>
										<!-- <m:cells>
											<m:ObjectIdentifier text="{i18n>CustomerDesc}"/>
										</m:cells> -->

										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>Rate}" visible="{= !${/bEdit}}"/>
												<m:Input value="{detail>Rate}" visible="{= !!${/bEdit}}"/>
											</m:HBox>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{detail>RateUnit}"/>
										</m:cells>
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{detail>Cap}" visible="{= !${/bEdit}}"/>
												<m:Input value="{detail>Cap}" visible="{= !!${/bEdit}}"/>
											</m:HBox>
										</m:cells>
										<m:cells>
											<m:ObjectIdentifier text="{
												path: 'detail>ValidFrom',
												type: 'sap.ui.model.type.Date',
												formatOptions: {
													style: 'medium',
													pattern: 'yyyy-MM-dd'
												}
											}"/>
										</m:cells>
										<m:cells>
											<m:HBox>
												<m:ObjectIdentifier text="{
													path: 'detail>ValidTo',
													type: 'sap.ui.model.type.Date',
													formatOptions: {
														style: 'medium',
														pattern: 'yyyy-MM-dd'
													}
												}" visible="{= !${/bEdit}}"/>
												<m:DatePicker value="{
													path: 'detail>/ValidTo',
													type: 'sap.ui.model.type.Date',
													formatOptions: {
														style: 'medium',
														pattern: 'yyyy-MM-dd'
													}
												}" visible="{= !!${/bEdit}}" valueFormat="yyyy-MM-dd" minDate="{setting>/minDate}"/>
											</m:HBox>
										</m:cells>

									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="{i18n>Edit}" visible="{= !${/bEdit}}" press=".edit"/>
				<m:Button type="Emphasized" text="{i18n>Save}" visible="{= !!${/bEdit}}" press=".save"/>
				<m:Button text="Cancel" visible="{= !!${/bEdit}}" press=".cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>